# Configuración de MongoDB
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=brainlens

# Configuración de almacenamiento
STORAGE_TYPE=local  # local o azure
LOCAL_STORAGE_PATH=./storage

# Configuración de Azure Files (si usas azure)
# AZURE_STORAGE_ACCOUNT_NAME=tu_storage_account
# AZURE_STORAGE_ACCOUNT_KEY=tu_storage_key
# AZURE_FILE_SHARE_NAME=brainlens-files

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Configuración de entorno
ENVIRONMENT=development
ALB_DNS_NAME=

# Configuración de JWT (cambiar en producción)
JWT_SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7 

# Configuración del VLM
# Proveedor VLM: 'bedrock' | 'ollama' | 'openai'
VLM_PROVIDER=bedrock
# Bedrock (AWS)
BEDROCK_MODEL_ID=amazon.nova-lite-v1:0
AWS_REGION=eu-north-1
AWS_DEFAULT_REGION=eu-north-1
VLM_TIMEOUT=300
# Credenciales AWS (rellena en tu .env real)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_SESSION_TOKEN=

# Ollama (si se usa localmente)
VLM_MODEL=minicpm-v
OLLAMA_BASE_URL=http://localhost:11434
VLM_SYSTEM_PROMPT=Responde SIEMPRE en español de forma clara y clínica cuando corresponda.
VLM_FORCE_SPANISH=true

# Frontend (build)
# Si no se setean, usará window.location.origin + /api/v1
REACT_APP_API_URL=
REACT_APP_IMAGE_API_URL=
REACT_APP_ANNOTATION_API_URL=
# Para producción: DNS del ALB (ej: brainlens-alb-123456789.eu-north-1.elb.amazonaws.com)
REACT_APP_ALB_DNS=

# OpenAI (opcional si usas este proveedor)
# OPENAI_API_KEY=sk-xxxx
# OPENAI_BASE_URL=https://api.openai.com/v1